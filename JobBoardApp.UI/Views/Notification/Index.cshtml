@model IEnumerable<NotificationDTO>

<div class="container py-5">
    <h2 class="text-center mb-4">My Notifications</h2>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <ul class="list-group">
                @foreach (var notification in Model)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center @(notification.IsRead ? "text-muted" : "")">
                        <span>@notification.Message</span>
                        <span class="text-muted small">@notification.CreatedAt.ToShortDateString()</span>
                        @if (!notification.IsRead)
                        {
                            <button class="btn btn-sm btn-primary" onclick="markAsRead('@notification.Id')">Mark as Read</button>
                        }
                    </li>
                }
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function markAsRead(id) {
            fetch(`/api/notifications/mark-as-read/${id}`, {
                method: 'POST'
            }).then(() => {
                location.reload(); // Reload the page to update the UI
            });
        }
    </script>
}
