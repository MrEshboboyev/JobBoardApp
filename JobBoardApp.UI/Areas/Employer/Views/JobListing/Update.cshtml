@model JobListingDTO

@{
    ViewData["Title"] = "Update Job Listing";
}

<div class="container py-5">
    <h2 class="text-center mb-4">Update Job Listing</h2>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-body p-4">
                    <!-- Form start -->
                    <form asp-action="Update" method="post">
                        <input asp-for="Id" hidden/>
                        <!-- Job Title -->
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Job Title</label>
                            <input asp-for="Title" class="form-control" placeholder="Enter job title" />
                            <small class="text-muted">E.g., Senior Software Engineer</small>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <!-- Job Description -->
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Job Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter job description"></textarea>
                            <small class="text-muted">Provide a detailed description of the job responsibilities and qualifications.</small>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Job Location -->
                        <div class="mb-3">
                            <label asp-for="Location" class="form-label">Location</label>
                            <input asp-for="Location" class="form-control" placeholder="Enter job location" />
                            <small class="text-muted">E.g., Remote, New York, San Francisco</small>
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>

                        <!-- Salary Range -->
                        <div class="mb-3">
                            <label asp-for="SalaryRange" class="form-label">Salary Range ($)</label>
                            <input asp-for="SalaryRange" class="form-control" type="number" placeholder="Enter salary range" />
                            <small class="text-muted">Provide the salary range for this position.</small>
                            <span asp-validation-for="SalaryRange" class="text-danger"></span>
                        </div>

                        <!-- Job Type -->
                        <div class="mb-3">
                            <label asp-for="JobType" class="form-label">Job Type</label>
                            <select asp-for="JobType" class="form-select">
                                <option value="">Select Job Type...</option>
                                <option value="0">Full-Time</option>
                                <option value="1">Part-Time</option>
                                <option value="2">Contract</option>
                                <option value="3">Remote</option>
                            </select>
                            <span asp-validation-for="JobType" class="text-danger"></span>
                        </div>

                        <!-- Is Active -->
                        <div class="form-check mb-3">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="IsActive" class="form-check-label">Active Job Listing</label>
                            <small class="text-muted d-block">Mark this job listing as active or inactive.</small>
                        </div>

                        <!-- Submit Button -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-success px-4">
                                <i class="bi bi-check-circle"></i> Update Job Listing
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
