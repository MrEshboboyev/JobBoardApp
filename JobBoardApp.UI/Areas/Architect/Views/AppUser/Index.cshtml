@model IEnumerable<UserDTO>

<div class="container py-5">
    <h2 class="text-center mb-5">All Users</h2>

    <div class="table-responsive">
        <table class="table table-bordered table-hover" id="usersTable">
            <thead>
                <tr>
                    <th>UserName</th>
                    <th>Email</th>
                    <th>Date Registered</th>
                    <th>Last Login Date</th>
                    <th>Is Active</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>@user.DateRegistered.ToShortDateString()</td>
                        <td>@user.LastLoginDate?.ToShortDateString()</td>
                        <td>
                            <!-- Display Status with a Bootstrap badge -->
                            @if (user.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </td>
                        <td>
                            <!-- SweetAlert2 Modal Trigger for Details -->
                            <button type="button" class="btn btn-outline-info btn-sm"
                                    onclick="openUserDetails('@user.UserName', '@user.Email',
                                    '@user.DateRegistered',  
                                    '@user.LastLoginDate', '@user.IsActive')">
                                <i class="bi bi-info-circle"></i> Details
                            </button>
                            <form asp-action="Delete" method="post" class="d-inline">
                                <input type="hidden" name="userId" value="@user.Id" />
                                <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?');">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        initializeDataTable('#usersTable', 5); // Pass table ID and non-sortable column index
    </script>
    <script>
        function openUserDetails(userName, email, dateRegistered, lastLoginDate, isActive) {
            const details = {
                "Username": userName,
                "Email": email,
                "Date Registered": dateRegistered,
                "Last Login Date": lastLoginDate,
                "Is Active": isActive
            };
            openDetails(userName, details); // Use the reusable function
        }
    </script>
}
