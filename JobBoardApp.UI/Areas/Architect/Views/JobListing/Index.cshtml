@model IEnumerable<JobListingDTO>

<div class="container py-5">
    <h2 class="text-center mb-5">All Job Listings</h2>

    <div class="table-responsive">
        <table class="table table-bordered table-hover" id="jobListingsTable">
            <thead>
                <tr>
                    <th>Employer Name</th>
                    <th>Title</th>
                    <th>Location</th>
                    <th>Salary</th>
                    <th>Job Type</th>
                    <th>Status</th> <!-- New Column for IsActive -->
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var job in Model)
                {
                    <tr>
                        <td>@job.EmployerName</td>
                        <td>@job.Title</td>
                        <td>@job.Location</td>
                        <td>@job.SalaryRange.ToString("C")</td>
                        <td>@job.JobType</td>
                        <td>
                            <!-- Display Status with a Bootstrap badge -->
                            @if (job.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </td>
                        <td>
                            <!-- SweetAlert2 Modal Trigger for Details -->
                            <button type="button" class="btn btn-outline-info btn-sm"
                                    onclick="openJobDetails('@job.Title', '@job.EmployerName',
                                    '@job.Description', '@job.Location', '@job.SalaryRange.ToString("C")',
                                    '@job.JobType')">
                                <i class="bi bi-info-circle"></i> Details
                            </button>
                            <form asp-action="Delete" method="post" class="d-inline">
                                <input type="hidden" name="jobListingId" value="@job.Id" />
                                <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Are you sure you want to delete this job listing?');">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#jobListingsTable').DataTable({
                // Enable Bootstrap 5 styling
                "dom": '<"top"f>rt<"bottom"lp><"clear">',
                "paging": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "responsive": true,
                "columnDefs": [
                    { "orderable": false, "targets": 6 } // Disable sorting on the Actions column
                ]
            });
        });

        function openJobDetails(title, employer, description, location, salary, jobType) {
            Swal.fire({
                title: `<strong>${title}</strong>`,
                icon: 'info',
                html: `
                            <p><strong>Employer:</strong> ${employer}</p>
                            <p><strong>Description:</strong> ${description}</p>
                            <p><strong>Location:</strong> ${location}</p>
                            <p><strong>Salary:</strong> ${salary}</p>
                            <p><strong>Job Type:</strong> ${jobType}</p>
                        `,
                showCloseButton: true,
                focusConfirm: false,
                confirmButtonText: 'Close'
            });
        }
    </script>
}
